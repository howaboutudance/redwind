{% extends "admin/base.jinja2" %}
{% include "admin/_nav.jinja2" %}

{% block content %}
  {% set styles = [('microblog', 'Microblog'),
                   ('socialnetwork', 'Social Nework'),
                   ('photosharing', 'Photo Sharing')] %}

  <h2>POSSE Targets</h2>

  <ul>
    {% for target in current_user.posse_targets %}
      <li style="margin-top: 1em;">
        <a href="{{ url_for('.edit', target_id=target.id) }}">
          {{ target.name }} ({{ target.uid }})
        </a>
      </li>
    {% endfor %}
  </ul>


  <h2>Add POSSE Target</h2>

  <form class="" method="POST" action="{{ url_for('.add') }}">
    <div class="form-group">
      <input class="form-control" type="url" name="me" placeholder="https://silo.pub/twitter.com/jwstillwater" />
    </div>
    <div class="form-group">
      <input class="btn btn-primary" type="submit" value="Authorize"/>
    </div>
  </form>

{% endblock %}
