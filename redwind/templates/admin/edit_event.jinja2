{% extends "admin/edit_post.jinja2" %}
{% block content_fields %}
  <div class="form-group">
    <label for="title">Title</label>
    <input class="form-control" type="text" name="title" id="title" value="{{ post.title or '' }}"/>
  </div>

  <div class="form-group row">
    <div class="col-md-6">
    <label for="startField">Start</label>
    <input class="form-control" name="start" id="startField" value="{{ post.start or '' }}"/>
    </div>

    <div class="col-md-6">
    <label for="endField">End</label>
    <input class="form-control" name="end" id="endField" value="{{ post.end or '' }}"/>
    </div>
  </div>

  <div class="form-group">
    <label for="content">Description</label>
    <textarea class="form-control" name="content" id="content" rows="4">{{ post.content or '' }}</textarea>
  </div>

{% endblock content_fields %}
